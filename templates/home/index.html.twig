    [ "Introductions Form Results Spreadsheet", "https://docs.google.com/spreadsheets/d/1F3XBYkJTMc2vubB3eolONzYec9be6wZ9rI0X5c1TuyQ/edit?usp=sharing" ],
    [ "Google Form with Group Chat (TikTok)", "https://forms.gle/sBMw3TQdg4sjQcgT6" ]
]
%}
<div class="list-group mb-3">
    {% for link in links %}
        <a href="{{ link[1] }}" class="list-group-item list-group-item-action" target="_blank" rel="noopener noreferer">
            {{ link[0] }}
        </a>
    {% endfor %}
</div>

